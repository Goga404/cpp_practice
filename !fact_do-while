#include<iostream>

using namespace std;

int main() {
  int counter = 1; // счётчик
  int number; // число, факториал которого мы будем вычислять
  int factorial_value = 1;
  
  cout << "Введите число: ";
  cin >> number;

  /* ↓ Ваш код ↓ */
  do {
    factorial_value *= counter;
    counter++;
  } while (number >= counter);

  cout << factorial_value;
  return 0;
}
